<div class="container pt-4"></div>
<div class="bg-image">
<h1 class="title-chain pt-4">L'état de votre Chaîne:</h1></div>
<div class="progress" style="width: 80%">
  <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" aria-label="Warning striped example" style="width: <%=@display_note%>%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<div class= "note" style="margin: 10px 50px 20px 10px">
  <p><%= @display_note.integer? ? @display_note : @display_note.truncate()%> / 100</p>
</div>
<div class="container pt-3 text-center">
  <div class="container pt-5"></div>
    <div class="cards-chain d-flex justify-content-around">
    <% @diag_values.each do |problem| %>
      <% if problem.is_a? String  || problem %>
        <div class="card" style="width: 18rem;">
          <div class="card-body-chain pb-2">
            <p class="card-text" style="padding: 15px;"><%= problem %></p>
            <%# <a href="#" class="btn btn-primary">Regarder un tuto</a> %>
            <%= link_to "Regarder tuto", bike_chain_tutoriel_path(@bike, @chain), class: "btn btn-primary"%>
          </div>
        </div>
      <%end%>
    <%end%>
  </div>
</div>
