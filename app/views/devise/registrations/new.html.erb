<div class="container">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "first-name",
                  class: "bg-white" }%>
      <%= f.input :last_name,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "last-name",
                  class: "bg-white" }%>
      <%= f.input :username,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "username",
                  class: "bg-white" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email",
                  class: "bg-white" }%>
      <%= f.input :photo, as: :file, label: "Add your profile picture" %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password",
                  class: "bg-white" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password",
                  class: "bg-white" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-warning text-white" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

</div>
