<%# <div class="container" style="margin: 0;"> %>
  <div class="shop-index">

      <div class="shops">
        <h2>Shops</h2>
        <ul class="shop-list">
          <% @shops.each do |shop| %>
          <div class="shop-card shop-card-border">
            <h3><%= shop.name %></h3>
            <p><%= shop.address %></p>
          </div>
          <% end %>
        </ul>
      </div>

      <div
        id="map"
        style="min-height: 100%;"
        data-markers="<%= @markers.to_json %>"
      >
      </div>
  </div>
<%# </div> %>
