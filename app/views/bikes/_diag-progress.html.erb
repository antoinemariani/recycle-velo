
<% if current_page?(bikes_path) %>
  <div class="progress" style="height: 3vh;">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-secondary" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
  </div>

<% elsif current_page?(bike_path) %>

  <% if ((@bike.chains.exists? ? (@bike.chains.last.created_at.to_date == Date.today) : false) && (@bike.wheels.exists? ? (@bike.wheels.last.created_at.to_date == Date.today) : false) && (@bike.brakes.exists? ? (@bike.brakes.last.created_at.to_date == Date.today) : false)) %>
      <div class="progress" style="height: 3vh;">
        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
      </div>

  <% elsif ((@bike.chains.exists? && @bike.wheels.exists?) ? ((@bike.chains.last.created_at.to_date == Date.today) && (@bike.wheels.last.created_at.to_date == Date.today)) : false) || ((@bike.brakes.exists? && @bike.wheels.exists?) ? ((@bike.wheels.last.created_at.to_date == Date.today) && (@bike.brakes.last.created_at.to_date == Date.today)) : false) || ((@bike.chains.exists? && @bike.brakes.exists?) ? ((@bike.chains.last.created_at.to_date == Date.today) && (@bike.brakes.last.created_at.to_date == Date.today)) : false) %>
    <div class="progress" style="height: 3vh;">
      <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

  <% elsif ((@bike.chains.exists? ? (@bike.chains.last.created_at.to_date == Date.today) : false) || (@bike.wheels.exists? ? (@bike.wheels.last.created_at.to_date == Date.today) : false) || (@bike.brakes.exists? ? (@bike.brakes.last.created_at.to_date == Date.today) : false)) %>
    <div class="progress" style="height: 3vh;">
      <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

  <% else %>
    <div class="progress" style="height: 3vh;">
      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

  <% end %>

<% end %>
